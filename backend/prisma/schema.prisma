// ============================================================================
// ProjectForge Database Schema
// Version: 1.0
// ============================================================================
// This schema defines all entities for the ProjectForge project management
// tool. Prisma generates the TypeScript client from this file.
// ============================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================
// Users can authenticate via local database or external OIDC/LDAP providers.

model User {
  /// Unique user identifier (CUID for distributed systems)
  id            String    @id @default(cuid())
  /// User email (unique, used for authentication)
  email         String    @unique
  /// Hashed password (null if user authenticates via OIDC/LDAP)
  passwordHash  String?
  /// User's first name
  firstName     String
  /// User's last name
  lastName      String
  /// URL to user avatar image
  avatarUrl     String?
  /// System role for permission management
  role          UserRole  @default(MEMBER)
  /// Account active status (deactivated users cannot login)
  isActive      Boolean   @default(true)
  /// Timestamp of last successful login
  lastLoginAt   DateTime?
  /// Creation timestamp
  createdAt     DateTime  @default(now())
  /// Last update timestamp
  updatedAt     DateTime  @updatedAt

  // Relations
  sessions           UserSession[]
  ownedTeams         Team[]           @relation("TeamOwner")
  teamMemberships    TeamMember[]
  projectMemberships ProjectMember[]
  assignedTasks      Task[]           @relation("TaskAssignee")
  createdTasks       Task[]           @relation("TaskCreator")
  comments           Comment[]
  notifications      Notification[]
}

/// System roles for user permissions
enum UserRole {
  /// Full system access
  ADMIN
  /// Can manage teams and projects
  MANAGER
  /// Regular team member
  MEMBER
  /// Read-only access
  VIEWER
}

/// Active user sessions for JWT token management
model UserSession {
  /// Unique session identifier
  id           String   @id @default(cuid())
  /// Reference to user
  userId       String
  /// JWT refresh token
  token        String   @unique
  /// Session expiration timestamp
  expiresAt    DateTime
  /// Client IP address for security
  ipAddress    String?
  /// Client user agent for security
  userAgent    String?
  /// Creation timestamp
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

// ============================================================================
// TEAM MANAGEMENT
// ============================================================================
// Teams organize users and own projects. Users can belong to multiple teams.

model Team {
  /// Unique team identifier
  id          String   @id @default(cuid())
  /// Team display name
  name        String
  /// Team description
  description String?
  /// URL-friendly slug for API endpoints
  slug        String   @unique
  /// Team avatar image URL
  avatarUrl   String?
  /// Team owner (creator)
  ownerId     String
  /// Team active status
  isActive    Boolean  @default(true)
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  // Relations
  owner        User          @relation("TeamOwner", fields: [ownerId], references: [id])
  members      TeamMember[]
  projects     Project[]

  @@index([slug])
}

/// Team membership with role-based access
model TeamMember {
  /// Unique membership identifier
  id        String         @id @default(cuid())
  /// Reference to team
  teamId    String
  /// Reference to user
  userId    String
  /// Member role within the team
  role      TeamMemberRole @default(MEMBER)
  /// When user joined the team
  joinedAt  DateTime       @default(now())

  // Relations
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

/// Roles for team membership
enum TeamMemberRole {
  /// Full control over team
  OWNER
  /// Can manage members and settings
  ADMIN
  /// Regular team member
  MEMBER
  /// View-only access
  VIEWER
}

// ============================================================================
// PROJECT MANAGEMENT
// ============================================================================
// Projects belong to teams and contain work packages, tasks, and milestones.

model Project {
  /// Unique project identifier
  id           String         @id @default(cuid())
  /// Project display name
  name         String
  /// Project description
  description  String?
  /// URL-friendly slug (unique within team)
  slug         String
  /// Project key for task IDs (e.g., "PRJ" for PRJ-1)
  key          String
  /// Project color for UI (hex format)
  color        String         @default("#6366f1")
  /// Project lifecycle status
  status       ProjectStatus  @default(ACTIVE)
  /// Project start date
  startDate    DateTime?
  /// Project end/target date
  endDate      DateTime?
  /// Reference to owning team
  teamId       String
  /// Creation timestamp
  createdAt    DateTime       @default(now())
  /// Last update timestamp
  updatedAt    DateTime       @updatedAt

  // Relations
  team        Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  members     ProjectMember[]
  workPackages WorkPackage[]
  milestones  Milestone[]
  activities  Activity[]

  @@unique([teamId, slug])
  @@index([teamId])
  @@index([slug])
}

/// Project lifecycle statuses
enum ProjectStatus {
  /// Active and ongoing
  ACTIVE
  /// Temporarily paused
  ON_HOLD
  /// Completed successfully
  COMPLETED
  /// Archived (read-only)
  ARCHIVED
}

/// Project membership with role-based access
model ProjectMember {
  /// Unique membership identifier
  id        String            @id @default(cuid())
  /// Reference to project
  projectId String
  /// Reference to user
  userId    String
  /// Member role within the project
  role      ProjectMemberRole @default(MEMBER)
  /// When user joined the project
  joinedAt  DateTime          @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

/// Roles for project membership
enum ProjectMemberRole {
  /// Full project control
  OWNER
  /// Can manage tasks and members
  MANAGER
  /// Regular contributor
  MEMBER
  /// View-only access
  VIEWER
}

// ============================================================================
// WORK PACKAGES
// ============================================================================
// Work packages organize tasks hierarchically (e.g., Epic → Story → Task).

model WorkPackage {
  /// Unique work package identifier
  id          String   @id @default(cuid())
  /// Work package display name
  name        String
  /// Detailed description
  description String?
  /// Reference to parent project
  projectId   String
  /// Parent work package (for nesting)
  parentId    String?
  /// Current status
  status      WorkPackageStatus @default(TODO)
  /// Priority level
  priority    Priority @default(MEDIUM)
  /// Sort order for manual ordering
  sortOrder   Int      @default(0)
  /// Work package start date
  startDate   DateTime?
  /// Work package due date
  dueDate     DateTime?
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent      WorkPackage?  @relation("WorkPackageHierarchy", fields: [parentId], references: [id])
  children    WorkPackage[] @relation("WorkPackageHierarchy")
  tasks       Task[]
  milestones  Milestone[]

  @@index([projectId])
  @@index([parentId])
}

/// Work package lifecycle statuses
enum WorkPackageStatus {
  /// Not started
  TODO
  /// Currently being worked on
  IN_PROGRESS
  /// Under review
  REVIEW
  /// Completed
  DONE
  /// Archived
  ARCHIVED
}

/// Priority levels for tasks and work packages
enum Priority {
  /// Low priority
  LOW
  /// Normal priority (default)
  MEDIUM
  /// High priority
  HIGH
  /// Urgent/critical priority
  URGENT
}

// ============================================================================
// MILESTONES
// ============================================================================
// Milestones track important project deadlines and deliverables.

model Milestone {
  /// Unique milestone identifier
  id           String   @id @default(cuid())
  /// Milestone display name
  name         String
  /// Milestone description
  description  String?
  /// Reference to parent project
  projectId    String
  /// Optional link to work package
  workPackageId String?
  /// Target completion date
  dueDate      DateTime
  /// Whether milestone is completed
  completed    Boolean  @default(false)
  /// When milestone was completed
  completedAt  DateTime?
  /// Creation timestamp
  createdAt    DateTime @default(now())
  /// Last update timestamp
  updatedAt    DateTime @updatedAt

  // Relations
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  workPackage WorkPackage? @relation(fields: [workPackageId], references: [id])
  tasks       Task[]

  @@index([projectId])
  @@index([workPackageId])
}

// ============================================================================
// TASKS
// ============================================================================
// Tasks are the smallest unit of work, assigned to team members.

model Task {
  /// Unique task identifier
  id            String     @id @default(cuid())
  /// Task title/summary
  title         String
  /// Detailed task description (Markdown support)
  description   String?
  /// Reference to parent project
  projectId     String
  /// Reference to parent work package
  workPackageId String?
  /// Reference to milestone
  milestoneId   String?
  /// Current task status
  status        TaskStatus @default(TODO)
  /// Task priority
  priority      Priority   @default(MEDIUM)
  /// Assigned team member
  assigneeId    String?
  /// Task creator
  creatorId     String
  /// Sort order for manual ordering
  sortOrder     Int        @default(0)
  /// Estimated hours to complete
  estimatedHours Float?
  /// Total hours logged
  loggedHours   Float      @default(0)
  /// Task start date
  startDate     DateTime?
  /// Task due date
  dueDate       DateTime?
  /// When task was completed
  completedAt   DateTime?
  /// Creation timestamp
  createdAt    DateTime   @default(now())
  /// Last update timestamp
  updatedAt    DateTime   @updatedAt

  // Relations
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  workPackage  WorkPackage? @relation(fields: [workPackageId], references: [id])
  milestone    Milestone?   @relation(fields: [milestoneId], references: [id])
  assignee     User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  creator      User         @relation("TaskCreator", fields: [creatorId], references: [id])
  comments     Comment[]
  attachments  Attachment[]
  dependencies TaskDependency[] @relation("DependentTask")
  dependents   TaskDependency[] @relation("DependencyTask")
  activities   Activity[]

  @@index([projectId])
  @@index([workPackageId])
  @@index([milestoneId])
  @@index([assigneeId])
}

/// Task lifecycle statuses
enum TaskStatus {
  /// Not started
  TODO
  /// Currently in progress
  IN_PROGRESS
  /// Waiting for review
  IN_REVIEW
  /// Completed
  DONE
  /// Cancelled/void
  CANCELLED
}

/// Task dependencies (blockers, prerequisites)
model TaskDependency {
  /// Unique dependency identifier
  id             String  @id @default(cuid())
  /// Dependent task (blocked task)
  taskId         String
  /// Task being depended on (blocker)
  dependsOnTaskId String

  // Relations
  task        Task @relation("DependentTask", fields: [taskId], references: [id], onDelete: Cascade)
  dependsOnTask Task @relation("DependencyTask", fields: [dependsOnTaskId], references: [id], onDelete: Cascade)

  @@unique([taskId, dependsOnTaskId])
  @@index([taskId])
  @@index([dependsOnTaskId])
}

// ============================================================================
// COMMENTS & ATTACHMENTS
// ============================================================================
// Task collaboration features for communication and file sharing.

model Comment {
  /// Unique comment identifier
  id        String   @id @default(cuid())
  /// Comment content (Markdown support)
  content   String
  /// Reference to parent task
  taskId    String
  /// Comment author
  userId    String
  /// Creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  // Relations
  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}

/// File attachments for tasks
model Attachment {
  /// Unique attachment identifier
  id        String   @id @default(cuid())
  /// Original filename
  name      String
  /// File URL (local path or S3 URL)
  url       String
  /// MIME type (e.g., "image/png")
  mimeType  String
  /// File size in bytes
  size      Int
  /// Reference to parent task
  taskId    String
  /// Creation timestamp
  createdAt DateTime @default(now())

  // Relations
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

// ============================================================================
// ACTIVITY & NOTIFICATIONS
// ============================================================================
// Activity tracking and user notifications for collaboration.

model Activity {
  /// Unique activity identifier
  id        String       @id @default(cuid())
  /// Type of action performed
  action    ActivityType
  /// Entity type being acted upon (project, task, etc.)
  entityType String
  /// Entity identifier
  entityId  String
  /// User who performed the action
  userId    String?
  /// Reference to project (if applicable)
  projectId String?
  /// Reference to task (if applicable)
  taskId    String?
  /// Additional activity metadata
  metadata  Json?
  /// When the activity occurred
  createdAt DateTime     @default(now())

  // Relations
  project Project? @relation(fields: [projectId], references: [id])
  task    Task?    @relation(fields: [taskId], references: [id])

  @@index([entityType, entityId])
  @@index([userId])
  @@index([projectId])
  @@index([createdAt])
}

/// Types of activities that are tracked
enum ActivityType {
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DELETED
  TASK_CREATED
  TASK_UPDATED
  TASK_ASSIGNED
  TASK_COMPLETED
  TASK_COMMENTED
  MEMBER_ADDED
  MEMBER_REMOVED
  MILESTONE_COMPLETED
}

/// User notifications for in-app alerts
model Notification {
  /// Unique notification identifier
  id        String   @id @default(cuid())
  /// Target user
  userId    String
  /// Notification title
  title     String
  /// Notification message
  message   String
  /// Link to related content
  link      String?
  /// Whether notification has been read
  isRead    Boolean  @default(false)
  /// Creation timestamp
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

// ============================================================================
// TIMELINES
// ============================================================================
// Timeline data for Gantt chart visualization.

model Timeline {
  /// Unique timeline identifier
  id          String   @id @default(cuid())
  /// Timeline display name
  name        String
  /// Reference to parent project
  projectId   String
  /// Timeline start date
  startDate   DateTime
  /// Timeline end date
  endDate     DateTime
  /// Whether this is the default timeline
  isDefault   Boolean  @default(false)
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  @@index([projectId])
}

/// Events on a timeline (milestones, deadlines, meetings)
model TimelineEvent {
  /// Unique event identifier
  id          String   @id @default(cuid())
  /// Reference to parent timeline
  timelineId  String
  /// Event title
  title       String
  /// Event description
  description String?
  /// Type of timeline event
  eventType   TimelineEventType
  /// Event start date/time
  startDate   DateTime
  /// Event end date/time (optional for single-day events)
  endDate     DateTime?
  /// Custom color for the event
  color       String?
  /// Creation timestamp
  createdAt   DateTime @default(now())

  @@index([timelineId])
  @@index([startDate])
}

/// Types of timeline events
enum TimelineEventType {
  /// Project milestone
  MILESTONE
  /// Important deadline
  DEADLINE
  /// Review session
  REVIEW
  /// Team meeting
  MEETING
  /// Release/deployment
  RELEASE
  /// Custom event type
  CUSTOM
}
