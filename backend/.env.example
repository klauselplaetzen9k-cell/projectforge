# =============================================================================
# ProjectForge Environment Configuration
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/projectforge?schema=public"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Frontend URL (for CORS)
# -----------------------------------------------------------------------------
FRONTEND_URL="http://localhost:5173"

# -----------------------------------------------------------------------------
# Password Hashing
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS="12"

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="info"

# -----------------------------------------------------------------------------
# OIDC Authentication (optional)
# -----------------------------------------------------------------------------
OIDC_ENABLED=false
OIDC_CLIENT_ID=""
OIDC_CLIENT_SECRET=""
OIDC_ISSUER_URL=""
OIDC_CALLBACK_URL="http://localhost:3000/api/auth/oidc/callback"
OIDC_SCOPES="openid email profile"

# -----------------------------------------------------------------------------
# LDAP Authentication (optional)
# -----------------------------------------------------------------------------
LDAP_ENABLED=false
LDAP_URL="ldap://localhost:389"
LDAP_BIND_DN=""
LDAP_BIND_PASSWORD=""
LDAP_BASE_DN="dc=example,dc=org"
LDAP_USER_SEARCH_BASE="cn=users,dc=example,dc=org"
LDAP_USER_SEARCH_FILTER="(uid={{username}})"
LDAP_USERNAME_FIELD="uid"
LDAP_GROUP_SEARCH_BASE="cn=groups,dc=example,dc=org"
LDAP_GROUP_SEARCH_FILTER="(member={{dn}})"

# -----------------------------------------------------------------------------
# File Uploads (optional)
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"
